<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="Hanna_weather" class="Hanna\MiniWindow\Block\WeatherBlock" template="weather.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">Weather Information</argument>
                </arguments>
            </block>
            <block name="Hanna_news" class="Hanna\MiniWindow\Block\NewsBlock" template="news.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">Bussiness News</argument>
                </arguments>
            </block>
            <block name="Hanna_currency" class="Hanna\MiniWindow\Block\CurrencyBlock" template="currency.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">Currency Exchange Rate</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
